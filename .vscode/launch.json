{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Chrome Launch (source maps)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:1338/index-debug.html",
            "webRoot": "${workspaceRoot}/",
            "sourceMaps": true,
            "userDataDir": "${workspaceRoot}/.tempChromeProfileForDebug"
        },
        {
            "name": "Chrome Launch (without source maps)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:1338/index-debug.html",
            "webRoot": "${workspaceRoot}/",
            "sourceMaps": false,
            "userDataDir": "${workspaceRoot}/.tempChromeProfileForDebug"
        },
        {
            "name": "Electron With Devtools",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
            },
            "env": {
                "DEBUG": "true"
            },
            "args": [
                "--remote-debugging-port=9223",
                "."
            ],
            "outFiles": [
                "build/**/*.js"
            ],
            "sourceMaps": true
        },
        {
            "name": "Attach Electron Renderer",
            "type": "chrome",
            "request": "attach",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "port": 9223,
            "sourceMapPathOverrides": {
				"file://*": "${workspaceRoot}/src/*",
				"file://./*": "${workspaceRoot}/src/*",
			}
        },
        {
            "name": "Electron",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
            },
            "args": [
                "--remote-debugging-port=9223",
                "."
            ],
            "outFiles": [
                "build/**/*.js"
            ],
            "sourceMaps": true
        },
        {
            "name": "VSCode Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/vscode-extension"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Editor",
            "configurations": ["Electron", "Attach Electron Renderer"],
        },
        {
            "name": "Electron & VSCode Extension",
            "configurations": ["Electron With Devtools", "VSCode Extension"]
        },
        {
            "name": "All",
            "configurations": ["Electron", "Attach Electron Renderer", "VSCode Extension", "Photoshop Extension"]
        }
    ]
}